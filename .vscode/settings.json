{
  "explorer.autoRevealExclude": {
    "**/node_modules": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.test.ts",
    "*.d.ts": "${capture}.map",
    "package.json": ".git*, .editorconfig, .eslint*, .node-version, .pnpm*, pnpm-*, .prettier*, .vscode*, eslint*, prettier*, tsconfig.json, *.log, vite*.config.ts"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "prettier.prettierPath": "node_modules/prettier",
  "cSpell.words": [
    "arethetypeswrong",
    "attw",
    "nonconstructor",
    "pkgroll",
    "postpublish",
    "Preact",
    "ruleset",
    "signali"
  ],
  "references.preferredLocation": "peek"
}
